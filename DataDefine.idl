// 星上时间广播数据类型 main -> slave
struct TimeBroadcast
{
    octet number;
    unsigned long seconds;
    unsigned long milliseconds;
};

// 卫星轨道广播数据 main -> slave
struct TrackBroadcast
{
    octet trackType;
    unsigned long seconds;
    unsigned long microseconds;

    // m
    float axisX;
    float axisY;
    float axisZ;

    // m/s
    float speedX;
    float speedY;
    float speedZ;
};

// 卫星姿态广播数据 main -> slave
struct AttitudeBroadcast
{
    octet gap;
    unsigned long seconds;
    unsigned long microseconds;

    // rad
    float roll;
    float pitch;
    float yaw;

    // rad/s
    float Vroll;
    float Vpitch;
    float Vyaw;
};

// 卫星轨道预报 main -> slave
struct TrackPredict
{
    octet number;
    unsigned long timestamp;

    // m
    unsigned long locX;
    unsigned long locY;
    unsigned long locZ;

    // cm/s
    unsigned long speedX;
    unsigned long speedY;
    unsigned long speedZ;
};

// 遥测请求指令 main -> slave
struct TelemetryRequest
{
    octet number;
    octet command[6];
};

