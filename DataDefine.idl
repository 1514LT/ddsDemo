    octet loctime3;
    octet loctime2;
    octet loctime1;

    octet sysState;
    octet commandCnt;
    octet busSignature;
    octet subsysState;

    octet imgMode;
    octet startTimeHigh;
    octet startTimeLow;
    octet subbandCont;

    octet argTelemetry1;
    octet taskNumber;
    octet cmdQueueLength;
    octet digitalTelemetry1;
    octet digitalTelemetry2;

    octet power100M;
    octet RFFM;
    octet RFamplify;
    octet RFoscillate;

    octet RFmainOsc5v;
    octet RFbackOsc5v;
    octet RFmain8p5v;
    octet RFback8p5v;
    octet RFmain5v;
    octet RFback5v;

    octet captureMain5v;
    octet captureBack5v;
    octet controlMain5v;
    octet controlBack5v;

    octet realMod1;
    octet realMod2;
    octet realMod3;
    octet realMod4;

    octet argTelemetry2;    
    octet argTelemetry3;   
    octet argTelemetry4;   
    octet argTelemetry5;   
    octet argTelemetry6;   
};

// 标准工作参数包 main -> slave
struct ParamPackage
{
    unsigned short packSize;
    unsigned short contentCtrl;
    unsigned short taskNumber;
    octet block1[60];
    octet block2[60];
    octet block3[60];
    octet block4[60];
    octet matrixSelect;
    octet gap;
};
